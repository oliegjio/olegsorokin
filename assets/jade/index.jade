  div.pace-overlay
  script.
    var pace_overlay = document.getElementsByClassName('pace-overlay')[0];
    
    Pace.on("start", function(){
      pace_overlay.style.visibility = 'visible';
      pace_overlay.style.opacity = '1';
    });

    Pace.on("done", function(){
      pace_overlay.style.transition = 'visibility 0s linear 1s, opacity 1s ease';
      pace_overlay.style.opacity = '0';
      pace_overlay.style.visibility = 'hidden';
    });
    
    Pace.start()
